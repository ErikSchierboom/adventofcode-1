{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build project",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "${workspaceFolder}/{inc,src}/*.cpp",
        "-o",
        "${workspaceFolder}/adventofcode"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "g++ build catch",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "${workspaceFolder}/inc/catch_amalgamated.cpp",
        "${workspaceFolder}/src/main.cpp",
        "-c"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "g++ build tests (debug)",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-std=c++17",
        "${workspaceFolder}/catch_amalgamated.o",
        "${workspaceFolder}/main.o",
        "${workspaceFolder}/src/day*.cpp",
        "-o",
        "${workspaceFolder}/adventofcode"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
