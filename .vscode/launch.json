{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "build and debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/cmake-build-debug/adventofcode",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build (debug)",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}